{{> _jumbotron}}

<br>
<h3>Execute Payment</h3>
<br>
<div class = "row">
  <div class = "col-md-6">
  <form method = "post" action = "/payments/execute">
  <div class = "form-group">
    <label for="json">Execute Payment</label>
    <textarea id = "textArea" class = "form-control rounded-0" name = "json" rows = "30" cols="200">{
        "payer_id": "{{payerID}}"
  }
    </textarea>
  </div>
  <input type = "hidden" name = "paymentID" value = "{{paymentID}}">
  <button type = "submit" class = "btn btn-primary">Submit</button>
  </form>
</div>
<div class = "col-md-6">
  <label for="response">Response</label>
<textarea class = "form-control rounded-0" name = "response" rows = "30" cols="200">{{paymentInfo}}{{errorResponse}}</textarea>
</div>
</div>

<br><br>

<h3>Show Payment Details</h3>
<br>
<div class = "row">
  <div class = "col-md-6">
  <form method = "post" action = "/payments/getDetails">
  <div class = "form-group">
    <label for="payID">Show Payment Details</label>
    <input type = "text" class = "form-control rounded-0" name = "payID" id = "payID" value = "{{paymentID}}">
  </div>
  <button type = "submit" class = "btn btn-primary">Submit</button>
  </form>
</div>
<div class = "col-md-6">
  <label for="response">Response</label>
<textarea class = "form-control rounded-0" name = "response" rows = "30" cols="200">{{getInfo}}{{errorResponse}}</textarea>
</div>
</div>

<br><br>

